.ivu-poptip-content{
  position: fixed;
  top: 20vh;
  right: 12px;
  z-index: 99;
  background: rgba(255, 255, 255, .95);
  padding: 12rpx 14rpx;
  border-radius: 8rpx;
  box-shadow: 2rpx 2rpx 4rpx #e9e9e9;
}
.ivu-poptip-body view{
  line-height: 34rpx;
}
.ivu-poptip-arrow:after {
  position: absolute;
  border-color: transparent;
  border-style: solid;
  border-width: 10rpx;
  content: " ";
  top: -10rpx;
  right: 50px;
  /* margin-left: -10rpx; */
  border-top-width: 0;
  border-bottom-color: rgba(255, 255, 255, .95);
}
.ivu-poptip-content image{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  right: 12rpx;
  top: 12rpx;
}
.t1,.t3{
  display: inline-block;
  font-size: 30rpx;
  font-weight: bold;
  position: relative;
  top: -5.6rpx;
}
.t2{
  display: inline-block;
  font-size: 50rpx;
  font-weight: bold;
  position: relative;
  top: -4rpx;
}