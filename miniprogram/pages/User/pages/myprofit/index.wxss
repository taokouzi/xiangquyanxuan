@import "/template/cardList/leftRight.wxss";
.order-box{
  border-bottom: 20rpx solid #f4f4f4;
}
.order-box:last-child{
    border-bottom: none;
}
.order{
    padding:30rpx 24rpx;
}
.sp-title{
  text-align: left;
}
.see-details-box{
    text-align: right;
    position: relative;
}
.see-details-box image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}
.li{
    position: relative;
    padding:36rpx 24rpx;
    display: flex;
}
.li .ai{
    position: absolute;
    right: 24rpx;
}
.li .right{
    position: absolute;
    right: 0;
}
.team{
  position: absolute;
  top: 150rpx;
  left: 0;
  right: 0;
  z-index: 1;
}
/* .li5 .sy-li{
    width: 20%;
    text-align: center;
    float: left;
} */
.tips{
    /* padding: .08rem 0; */
    margin-left:24rpx;
    position: absolute;
    right: 24rpx;
}
.tips li{
    padding:2rpx 10rpx;
    background: rgba(255,73,0,.2);
    border-radius: 2rpx;
    margin-right: 10rpx;
    color: #FF4900;
}
.tips li.return{
    background: rgba(0,0,0,.1) !important;
    text-decoration: line-through;
    color: #999999 !important;
}
.tips li:last-child{
    margin-right: 0;
}
._tx{
    padding:30rpx 24rpx;
}
.btn{
    color: #ffffff;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0 24rpx;
    position: absolute;
    right: 24rpx;
    font-size: 24rpx;
}
.tx{
    color: #f00;
}
.m-top{
    height: 300rpx;
    margin-bottom: 40rpx;
    /* background: #FF4900; */
    color: #ffffff;
    position: relative;
}
.tx-history{
    color: #ffffff;
    border-bottom: 1rpx solid #ffffff;
}
.m-top h1{
    text-align: center;
}
.m-top .clear2 .left,.m-top .clear2 .right{
    width: 25%;
    text-align: center;
    position: relative;
}
.m-top .clear2.x3 .left,.m-top .clear2.x3 .right{
    /* width: 33.333%; */
    width: 50%;
    text-align: center;
    position: relative;
}
.m-top .clear2.x5 .left,.m-top .clear2.x5 .right{
    width: 20%;
    text-align: center;
    position: relative;
}
.m-top .clear2 .left:nth-of-type(2):after{
    content: "|";
    position: absolute;
    right: 0;
    top: 20rpx;
    color: rgba(255,255,255,.6)
}
.m-top .clear2.x3 .left:nth-of-type(2):after{
    content: "";
}
.m-top .clear2{
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding:10rpx 0;
}
.clear2 h2.bold{
    padding:0 10rpx;
}
.clear1{
    position: relative;
    padding: 24rpx;
}
.clear1 .left h1{
    text-align: left;
}
.clear1 .right{
    position: absolute;
    right: 24rpx;
}
.nav{
  background: transparent;
}
.bg-red{
  background: #ffffff;
}
.hongbao{
  background: rgba(255,195,0,.5) !important;
  color: #333 !important;
}