/**index.wxss**/
@import "/template/cardList/leftRight.wxss";
page{
  background: #ffffff;
  min-height: 100vh;
}
.swiper-tab{
	width: 100%;
	text-align: center;
	line-height: 100rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 9;
  background: #ffffff;
}
.swiper-tab-list{
  display: inline-block;
	width: 25%;
	color: #7d7e80;
  position: relative;
  font-size: 28rpx;
  font-weight: normal;
  transition: font-size .15s ease-in;
  -webkit-transition: font-size .15s ease-in;
}
.on{
  color: #FF4900;
  font-size: 32rpx;
  font-weight: bold;
  transition: font-size .15s ease-in;
  -webkit-transition: font-size .15s ease-in;
}
.on text{ 
  position: absolute;
  bottom: 0;
  margin-left: -12rpx;
  left: 50%;
  display: inline-block;
  width: 24rpx;
  height: 8rpx;
  background: #FF4900;
  border-radius: 8rpx !important;
}
.swiper-box{ 
  display: block; 
  width: 100%; 
  height: 100vh; 
  overflow-y: scroll;
  /* padding-top: 100rpx; */
  box-sizing: border-box;
  background: #f5f5f5;
  /* padding-bottom: 140rpx; */
}
swiper-item{
  overflow-y: scroll;
}
.van-tab__pane{
  background: #f5f5f5 !important;
}
.van-tabs--line .van-tabs__wrap{
  height: 100rpx !important;
}
.order-list{
  padding: 0 20rpx;
}
.order-box:last-child .line{
    display: none;
}
.order{
  padding:30rpx 24rpx;
  /* box-shadow: 0 4rpx 8rpx 0 rgba(172,183,191,.5); */
  box-shadow: 10rpx 10rpx 20rpx #e9e9e9;
  margin-bottom: 20rpx;
}
.see-details-box{
    margin-top: 30rpx;
}
.see-details{
    display: inline-block;
    height: 48rpx;
    line-height: 48rpx;
    padding:0 20rpx;
    border-radius: 40rpx;
    border:1rpx solid #eeeeee;
    color: #999999;
    background: transparent;
}
.li{
    position: relative;
    padding:36rpx 24rpx;
    display: flex;
}
.li .ai{
    position: absolute;
    right: 24rpx;
}
.li .right{
    position: absolute;
    right: 0;
}



.van-tabs--line .van-tabs__wrap{
  height: 100rpx !important;
}
.van-tab{
  line-height: 100rpx !important;
}
.van-tabs__line{
  width: 24rpx !important;
  height: 8rpx !important;
  border-radius:8rpx !important;
}
.van-ellipsis{
  font-size: 28rpx;
  transition: font-size .15s ease-in;
  -webkit-transition: font-size .15s ease-in;
}
.van-tab--active .van-ellipsis{
  font-weight: bold;
  font-size: 32rpx;
  transition: font-size .15s ease-in;
  -webkit-transition: font-size .15s ease-in;
}
.order-list .van-list{
  padding: 0 20rpx;
}
.van-tabs__line{
  background-color: #FF4900 !important;
}
.van-tab--active .van-ellipsis{
  color: #FF4900 !important;
}
  
._scode{
  width: 100% !important;
  background: transparent !important;
  top: 48% !important;
  -webkit-transform: translate(-50%,-50%) !important;
  transform: translate(-50%,-50%) !important;
}

.scode-box{
  width: 440rpx;
  height: 548rpx;
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  text-align: center;
}

swiper-item,._scode .van-popup {
  background: transparent !important;
  text-align: center !important;
}

._scode .scode-box-item{
  width: 750rpx;
  height: 568rpx;
  background: transparent !important;
  position: relative;
  box-sizing: content-box;
}
._scode .scode-box{
  transition: all .3s ease-in-out;
  -webkit-transition: all .3s ease-in-out;
  transform: scale(.7);
  -webkit-transform: scale(.7);
}
._scode .scode-box.on{
  transition: all .3s ease-in-out;
  -webkit-transition: all .3s ease-in-out;
  transform: scale(1);
  -webkit-transform: scale(1);
}

/* 轮播小圆点 */
.dots{
  margin-top: 30rpx;
}
/*未选中时的小圆点样式 */
.dot {
 width: 12rpx;
 height: 12rpx;
 border-radius: 50%;
 margin-right: 12rpx;
 background-color: white;
}
.dots .dot:last-child{
  margin-right: 0;
}
/*选中以后的小圆点样式 */
.active {
 width: 12rpx;
 height: 12rpx;
 background-color: #FF4900;
}
