/* miniprogram/pages/Main/pages/authorize/index.wxss */
.auth{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9;
  /* padding-top: 20vh; */
  text-align: center;

  color: #ffffff;
}
.auth-bg{
  width: 750rpx;
  height: 100vh;
  object-fit: cover;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.sq-xian{
  border-bottom: 2rpx dashed #333;
  margin: 60rpx 0;
}
.btns{
  width: 84%;
  position: absolute;
  left: 8%;
  z-index: 10;
  bottom: 240rpx;
  background: #ffffff;
  border-radius: 20rpx;
  padding:60rpx 40rpx;
}
button{
  background-image: linear-gradient(to right,rgb(255, 195, 0), rgb(255, 73, 0));
  color: #ffffff;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  width: 60%;
  max-width: 380rpx;
  margin:0 auto;
}
.phone{
  position: absolute;
  right: -160rpx;
  opacity: 0;
  width: 100%;
  height: 88rpx;
}
.phone.active{
  right: 0;
  opacity: 1;
  transition: all .3s ease-in-out;
}
.btn2{
  position: relative;
  height: 88rpx;
}