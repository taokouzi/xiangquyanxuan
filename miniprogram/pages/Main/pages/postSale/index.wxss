}
.postSale2 input{
    width: 70%;
}

.layer{
  height: auto;
  min-height: 40vw;
  padding-bottom: 28rpx;
  bottom: -70vh;
}
.layer .view{
  width: 100%;
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  text-align: center;
}
.layer .clear{
  padding: 30rpx 32rpx;
  margin: 0 !important;
  box-sizing: border-box;
  border-bottom:1rpx solid rgba(0,0,0,.1);
  position: relative;
}
.layer .clear:last-child{
  border-color: transparent;
}
.layer .left{
  padding-top: 0;
}
.layer .right{
  position: absolute;
  right: 32rpx;
}
.ly-box{
  max-height: 70vh;
   overflow-y: scroll;
}
.update-img{
  display: inline-block;
  object-fit: cover;
  width:160rpx !important;
  height:160rpx !important;
  border-radius: 2rpx;
}
.view-img{
  position: relative;
  margin-right: 16rpx;
}
.view-img:nth-of-type(4){
  margin-right: 0;
}
.close-img{
  position: absolute;
  z-index: 7;
  right: -12rpx;
  top: -12rpx;
  background: #ffffff;
  padding: 2rpx;
  width:36rpx !important;
  height:36rpx !important;
  border-radius: 50%;
}
._update{
  margin-top: 20rpx;
}