.btn{
    width: 100%;
}
.postSale2{
    margin-bottom: 160rpx;
}
.postSale .li{
    position: relative;
    padding: 24rpx;
}
.photo{
    padding: 24rpx;
}
.postSale .li .img{
    position: absolute;
    right: 24rpx;
}
.postSale .li .ai{
    position: absolute;
    right: 24rpx;
}
.shuo-ming{
    display: flex;
    position: relative;
}
.shuo-ming .span{
    width: 130rpx;
    position: relative;
    top: -44rpx;
