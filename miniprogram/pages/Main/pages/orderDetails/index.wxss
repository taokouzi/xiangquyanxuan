._scode{
  width: 100% !important;
  background: transparent !important;
  top: 48% !important;
  -webkit-transform: translate(-50%,-50%) !important;
  transform: translate(-50%,-50%) !important;
}

.scode-box{
  width: 440rpx;
  height: 548rpx;
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  text-align: center;
}

swiper-item,._scode .van-popup {
  background: transparent !important;
  text-align: center !important;
}

._scode .scode-box-item{
  width: 750rpx;
  height: 568rpx;
  background: transparent !important;
  position: relative;
  box-sizing: content-box;
}
._scode .scode-box{
  transition: all .3s ease-in-out;
  -webkit-transition: all .3s ease-in-out;
  transform: scale(.7);
  -webkit-transform: scale(.7);
}
._scode .scode-box.on{
  transition: all .3s ease-in-out;
  -webkit-transition: all .3s ease-in-out;
  transform: scale(1);
  -webkit-transform: scale(1);
}

/* 轮播小圆点 */
.dots{
  margin-top: 30rpx;
}
/*未选中时的小圆点样式 */
.dot {
 width: 12rpx;
 height: 12rpx;
 border-radius: 50%;
 margin-right: 12rpx;
 background-color: white;
}
.dots .dot:last-child{
  margin-right: 0;
}
/*选中以后的小圆点样式 */
.active {
 width: 12rpx;
 height: 12rpx;
 background-color: #FF4900;
}
